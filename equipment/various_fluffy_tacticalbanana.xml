<Grenade name="Fluffy Banana" inventoryBinding="UtilityPouch"
			quantity="1"
				
			tooltip="Tactical Banana"
			description="Everyone Gets a Little Hungry now and Then."
			img="data/models/equipment/Banana_ui.dds"
			img_tooltip="data/models/equipment/flashbang_ui_ttip.tga"

			animationSet="grenade"
			soundUse="grenade_use"
		>
		<ClassBinding name="DEVGRUOperator"/>
		<ClassBinding name="DEVGRUSniper"/>
		<RenderObject3D model="data/models/equipment/Banana.khm" skipGOSSAO="true" diffuseTex="data/models/equipment/Banana.dds"/>
		<ConcealmentModifier add="-1"/>
		<MobilityModifiers moveSpeedModifierPercent="-0.5" turnSpeedModifierPercent="0"/>

		<!--
		- throwTime is the full time required to throw it, it is split in half between when the hand starts moving and the grenade launches and the recovery
		- the effectRange Radius contains the previous one, but the effects do not concatenate
		- explosion time is adjusted automatically depending on the distance to target, but have a minimum explosion time
		-->
		<ModifiableParams
			changeInTime="0"
			changeOutTime="0"
			throwTime="1000"
			throwTimeCorner="1400"
		/>

		<Projectile
			bodyTemplate="BananaGrenade"
			pathIconTexture="data/textures/gui/contextual/pathicon_flashbang_active.tga"

			soundExplosion=""
			soundHitFloor="grenade_hit_floor"
			soundVoiceOnLaunch="VOX_TRPR_GEAR_FLASH"

			friendlyFire="true"
			triggerOnImpact="true"
			triggerTimeAfterTargetHitMsec="100"

			physicsDetonationForce="0"
			audibleLaunchSoundRadius="0"
			audibleDetonationSoundRadius="0">

			<!-- burn marks are randomly rotated/scaled for diversity -->
			<FX
				particles=""
				anim2D="">
			</FX>

			<EffectRange radiusMeters="0.1">
				<StunEffect chancePercent="0" innerRangeTimeMSec="3500" outerRangeTimeMSec="3500"/>
				<DamageEffect chancePercent="100" damage="-100" damageType="1"/>
			</EffectRange>
		</Projectile>
	</Grenade>